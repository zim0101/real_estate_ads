<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="property_type_tree_view" model="ir.ui.view">
            <field name="name">property_type.tree</field>
            <field name="model">property_type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="property_type_form_view" model="ir.ui.view">
            <field name="name">property_type.form</field>
            <field name="model">property_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property_type" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="res_model">property_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="property_type_tree_view" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property Type!
                </p>
            </field>
        </record>
    </data>
</odoo>